    xmlns:local="using:Hello2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="183,150,0,0" TextWrapping="Wrap" Text="Please enter your name" VerticalAlignment="Top" Height="92" Width="412" FontSize="24"/>
